{{#each recipes}}
<div class="card">
    <div class="card-header text-center">
        <h1><strong>{{name}}</strong></h1>
    </div>
    <div class="card-body">
        <img src={{Picture.data}} alt={{name}} style="height: 200px; width: 200px; float: left; margin: 5px">

        <p>Rating: +{{rating}}</p>


        <p>Steps: {{steps}}</p>


        <p>Ingredients: {{ingredients}}</p>




        <button data-recipe-id={{id}} class="like btn btn-primary" style="float: right">Like</button>


    </div>

</div>
<br>
{{/each}}